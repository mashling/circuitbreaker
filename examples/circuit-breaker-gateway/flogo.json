{
  "name": "CircuitBreakerGateway",
  "type": "flogo:app",
  "version": "1.0.0",
  "description": "Protect services with circuit breaker pattern",
  "triggers": [
    {
      "name": "circuit-breaker",
      "id": "receive_http_message",
      "ref": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
      "description": "Circuit Breaker activity",
      "settings": {
        "port": "9096"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/pets/:petId"
          },
          "action": {
            "id": "pets"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "pets",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
      "data": {
        "flowURI": "res://flow:pets"
      }
    }
  ],
  "resources": [
    {
      "id": "flow:pets",
      "compressed": false,
      "data": {
        "name": "flow",
        "type": 1,
        "attributes": [],
        "rootTask": {
          "id": "root",
          "type": 1,
          "tasks": [
            {
              "id": "circuitbreaker",
              "name": "Invoke Circuit breaker",
              "description": "Circuit breaker service",
              "type": 1,
              "activityType": "github-com-mashling-circuitbreaker",
              "activityRef": "github.com/mashling/circuitbreaker",
              "attributes": [
                {
                  "name": "serviceName",
                  "value": "CircuitBreaker",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "operation",
                  "value": null,
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "context",
                  "value": "get",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "mode",
                  "value": "a",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "threshold",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "period",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "timeout",
                  "value": null,
                  "required": false,
                  "type": "integer"
                }
              ]
            },
            {
              "id": "rest_2",
              "name": "Invoke REST Service",
              "description": "Simple REST Activity",
              "type": 1,
              "activityType": "github-com-mashling-flogoactivity",
              "activityRef": "github.com/mashling/httpactivity",
              "attributes": [
                {
                  "name": "serviceName",
                  "value": "reset",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "method",
                  "value": "GET",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "url",
                  "value": "http://petstore.swagger.io/v2/pet/:petId",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "path",
                  "value": null,
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "pathParams",
                  "value": null,
                  "required": false,
                  "type": "any"
                },
                {
                  "name": "body",
                  "value": null,
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "headers",
                  "value": null,
                  "required": false,
                  "type": "any"
                },
                {
                  "name": "query",
                  "value": null,
                  "required": false,
                  "type": "any"
                },
                {
                  "name": "timeout",
                  "value": null,
                  "required": false,
                  "type": "integer"
                }
              ],
              "inputMappings": [
                {
                  "type": 1,
                  "value": "{T.pathParams}",
                  "mapTo": "pathParams"
                }
              ]
            },
            {
              "id": "circuitbreaker_1",
              "name": "Invoke Circuit breaker",
              "description": "Circuit breaker service with operation as counter",
              "type": 1,
              "activityType": "github-com-mashling-circuitbreaker",
              "activityRef": "github.com/mashling/circuitbreaker",
              "attributes": [
                {
                  "name": "serviceName",
                  "value": "CircuitBreaker",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "operation",
                  "value": "counter",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "context",
                  "value": "get",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "mode",
                  "value": "a",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "threshold",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "period",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "timeout",
                  "value": null,
                  "required": false,
                  "type": "integer"
                }
              ]
            },
            {
              "id": "circuitbreaker_2",
              "name": "Invoke Circuit breaker",
              "description": "Circuit breaker service when operation as reset",
              "type": 1,
              "activityType": "github-com-mashling-circuitbreaker",
              "activityRef": "github.com/mashling/circuitbreaker",
              "attributes": [
                {
                  "name": "serviceName",
                  "value": "CircuitBreaker",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "operation",
                  "value": "reset",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "context",
                  "value": "get",
                  "required": true,
                  "type": "string"
                },
                {
                  "name": "mode",
                  "value": "a",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "threshold",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "period",
                  "value": null,
                  "required": false,
                  "type": "integer"
                },
                {
                  "name": "timeout",
                  "value": null,
                  "required": false,
                  "type": "integer"
                }
              ]
            },
            {
              "id": "reply_1",
              "name": "Reply (Legacy)",
              "description": "Simple Reply fpr tripped condition",
              "type": 1,
              "activityType": "tibco-reply",
              "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/actreply",
              "attributes": [
                {
                  "name": "code",
                  "value": 0,
                  "required": true,
                  "type": "integer"
                },
                {
                  "name": "data",
                  "value": null,
                  "required": false,
                  "type": "any"
                }
              ],
              "input": {
                "mappings": [
                  {
                    "type": 1,
                    "value": "$activity[rest_2].response.output.code",
                    "mapTo": "code"
                  },
                  {
                    "type": 1,
                    "value": "$activity[rest_2].response.body",
                    "mapTo": "data"
                  }
                ]
              }
            }
          ],
          "links": [
            {
              "id": 1,
              "from": "circuitbreaker",
              "to": "rest_2",
              "type": 0
            },
            {
              "id": 2,
              "from": "rest_2",
              "to": "circuitbreaker_2",
              "type": 1,
              "value": "($activity[rest_2].response.netError == ''"
            },
            {
              "id": 3,
              "from": "rest_2",
              "to": "circuitbreaker_1",
              "type": 1,
              "value": "$activity[rest_2].response.netError != ''"
            },
            {
              "id": 4,
              "from": "circuitbreaker_1",
              "to": "reply_1",
              "type": 1,
              "value": "$activity[rest_2].response.body.status == 'available'"
            },
            {
              "id": 5,
              "from": "circuitbreaker_2",
              "to": "reply_1",
              "type": 1,
              "value": "$activity[rest_2].response.body.status == 'available'"
            }
          ],
          "attributes": []
        },
        "explicitReply": true,
        "errorHandlerTask": {
          "id": 7,
          "type": 1,
          "tasks": [
            {
              "id": "log_8",
              "name": "Log Message (5)",
              "description": "Simple Log Activity",
              "type": 1,
              "activityType": "tibco-log",
              "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
              "attributes": [
                {
                  "name": "message",
                  "value": "Error Processing request in gateway",
                  "required": false,
                  "type": "string"
                },
                {
                  "name": "flowInfo",
                  "value": "true",
                  "required": false,
                  "type": "boolean"
                },
                {
                  "name": "addToFlow",
                  "value": "true",
                  "required": false,
                  "type": "boolean"
                }
              ]
            }
          ],
          "links": [],
          "attributes": []
        }
      }
